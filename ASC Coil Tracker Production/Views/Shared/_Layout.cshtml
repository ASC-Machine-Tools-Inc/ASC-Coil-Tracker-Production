<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="@Url.Content("~/Content/favicon.ico")" />
    <title>@ViewBag.Title - ASC Coil Tracker</title>

    <!-- Non render-blocking resources -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Font awesome -->
    <script src="https://kit.fontawesome.com/d1b8b99eb8.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark">
        @Html.ActionLink("ASC Coil Tracker", "Index", "Coil", new { area = "" }, new { @class = "navbar-brand" })

        <div class="navbar-nav mr-auto">
            <li>@Html.ActionLink("Coils", "Index", "Coil", null, new { @class = "nav-item nav-link" })</li>
            <li>@Html.ActionLink("Search History", "Index", "HistoryEvent", null, new { @class = "nav-item nav-link" })</li>
            <li>@Html.ActionLink("Coil Calculator", "Calculator", "Coil", null, new { @class = "nav-item nav-link" })</li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Help
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                    @Html.ActionLink("User Guide", "Guide", "Home", null, new { @class = "dropdown-item" })
                    @Html.ActionLink("About", "Contact", "Home", null, new { @class = "dropdown-item" })
                </div>
            </li>
        </div>
    </div>
    <div class="container-fluid body-content px-5 py-3">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ASC Coil Tracker (v1.2.1)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/popper")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>