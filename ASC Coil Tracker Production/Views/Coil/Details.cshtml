@model  ASC_Coil_Tracker_Production.Models.COILTABLE

@{
    ViewBag.Title = "Details";
}

<div class="row">
    <!-- Coil details card -->
    <div class="col-md-6">
        <h2 class="mb-3">Details</h2>
        <div class="card border-dark details-card">
            <div class="card-header border-dark details-card-header pr-0">
                <div class="col">
                    <div class="row details-card-header-row">
                        <div class="col-4 p-0">
                            ID:
                            @Html.DisplayFor(model => model.ID)
                        </div>
                        <div class="col-8 text-right">
                            Current Length (ft):
                            @Html.DisplayFor(model => model.LENGTH)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col p-0">
                            @Html.DisplayFor(model => model.NOTES)
                        </div>
                        <div class="col text-right text-muted">
                            Original Length:
                            @Html.Raw(ViewBag.OriginalLength)
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <dt class="col">
                            @Html.DisplayNameFor(model => model.COLOR)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.COLOR)
                        </dd>

                        <dt class="col">
                            @Html.DisplayNameFor(model => model.TYPE)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.TYPE)
                        </dd>

                        <dt class="col">
                            @Html.DisplayNameFor(model => model.GAUGE)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.GAUGE)
                        </dd>

                        <dt class="col">
                            @Html.DisplayNameFor(model => model.WIDTH)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.WIDTH)
                        </dd>
                    </div>
                    <div class="col">
                        <dt class="col">
                            @Html.DisplayNameFor(model => model.CUSTOMER)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.CUSTOMER)
                        </dd>

                        <dt class="col">
                            @Html.DisplayNameFor(model => model.THICK)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.THICK)
                        </dd>

                        <dt class="col">
                            @Html.DisplayNameFor(model => model.YIELD)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.YIELD)
                        </dd>

                        <dt class="col">
                            @Html.DisplayNameFor(model => model.WEIGHT)
                        </dt>
                        <dd class="col">
                            @Html.DisplayFor(model => model.WEIGHT)
                        </dd>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- History table -->
    <div class="col-md-6">
        <div class="row justify-content-between align-content-center
                 align-middle coil-history-header">
            <h2>History</h2>
            @if (Session["Email"] != null)
            {
                <button href="@Url.Action("Create", "HistoryEvent", new {coilID = Model.ID})"
                        class="btn btn-primary">
                    <i class="fas fa-plus"></i>
                    Create New History Record
                </button>
            }
        </div>

        <div class="container-fluid container-table table-responsive p-0">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Amount Used</th>
                        <th>Assigned Job Number</th>
                        <th>Notes</th>
                        <th>Purpose</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.COILTABLEHISTORY)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DATE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AMOUNTUSED)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JOBNUMBER)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PURPOSE)
                            </td>
                            <td class="clamp">
                                @Html.DisplayFor(modelItem => item.NOTES)
                            </td>
                            <td>
                                <div class="btn-group d-flex" role="group">
                                    <button type="button" class="btn btn-outline-primary dropdown-toggle" data-toggle="dropdown">
                                        Actions
                                    </button>
                                    <div class="dropdown-menu">
                                        <a href="@Url.Action("Edit", new {id = item.ID})" class="btn btn-outline-primary dropdown-item">
                                            <i class="fas fa-edit"></i>
                                            Edit
                                        </a>
                                        <a href="@Url.Action("Details", new {id = item.ID})" class="btn btn-outline-primary dropdown-item">
                                            <i class="fas fa-info-circle"></i>
                                            Details
                                        </a>
                                        <a href="@Url.Action("Delete", new {id = item.ID})" class="btn btn-outline-primary dropdown-item">
                                            <i class="fas fa-trash"></i>
                                            Delete
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Session["Email"] != null)
{
    <span class="btn-group my-4" role="group">
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
            Back to List
        </a>
        <a href="@Url.Action("Edit", new { id=Model.ID })" class="btn btn-outline-primary">
            <i class="fas fa-edit"></i>
            Edit
        </a>
    </span>
}
else
{
    <a href="@Url.Action("Login", "Home")" class="btn btn-primary my-2">
        To Login
    </a>
}